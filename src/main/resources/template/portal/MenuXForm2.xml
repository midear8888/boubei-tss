<?xml version="1.0" encoding="UTF-8"?>
<xform>
	<declare>
		<column name="id" mode="hidden"/>
		<column name="name" caption="名称" mode="string" maxLength="50" empty="false"/>	
		<column name="code" caption="编码" mode="string" maxLength="50" empty="false"/>	
		<column name="icon" caption="图标" mode="string" maxLength="200"/>	
		<column name="description" caption="描述信息" mode="string"/>
	</declare>
	<layout>
		<TR>
			<TD width="80"><label binding="name"/></TD>
			<TD><input binding="name" style="width:150px;"/></TD>
		</TR>
		<TR>
			<TD><label binding="code"/></TD>
			<TD><input binding="code" style="width:150px;"/></TD>
		</TR>
		<TR>
			<TD><label binding="icon"/></TD>
			<TD><input binding="icon" style="width:300px;"/></TD>
		</TR>
		<TR>
			<TD><label binding="description"/></TD>
			<TD><textarea binding="description" style="width:60%;height:100px;"/></TD>
		</TR>
	</layout>
	<data>
	</data>
</xform>
